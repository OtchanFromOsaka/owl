{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "@cloudflare/workers-types/2023-07-01"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["app/*"]
		}
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
		"playwright.config.ts",
		"vite.config.ts",
		"vitest.config.ts"
  ]
}
